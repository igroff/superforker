#!/usr/bin/env bash
source "${SUPERFORKER_ROOT}/src/env"
#have forever stop the madness, and remove the watchdog cron job
forever stop "${SUPERFORKER_INSTALLED}/src/server_shim.js" 
WATCHDOG=`crontab -l | grep "${ROOT}"`
#wipe out the watchdog from the crontab
if [ -n "$WATCHDOG" ]; then
  echo "Removing the watchdog"
  crontab -l | grep -v "${ROOT}" | crontab
fi
